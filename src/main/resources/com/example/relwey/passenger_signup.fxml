<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.relwey.PassengerSignupController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Sign Up" />

    <TextField fx:id="nameField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" promptText="Name" />
    <TextField fx:id="nidField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" promptText="NID" />
    <TextField fx:id="emailField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" promptText="Email" />
    <TextField fx:id="addressField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="50.0" prefWidth="300.0" promptText="Address" />
    <PasswordField fx:id="passwordField" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" promptText="Password" />

    <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="24.0" prefWidth="119.0" spacing="10">
        <Button onAction="#handleBack" prefHeight="25.0" prefWidth="50.0" text="Back" />
        <Button onAction="#handleSignUp" text="Sign Up" textAlignment="JUSTIFY" />
    </HBox>
</VBox>
