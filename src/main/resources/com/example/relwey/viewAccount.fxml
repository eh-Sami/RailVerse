            </GridPane>


            <VBox spacing="10">
                <Label alignment="CENTER_LEFT" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Trip History:" />

                <TableView fx:id="ticketTable" layoutX="55.0" layoutY="70.0" prefHeight="131.0" prefWidth="817.0">
                    <columns>
                        <TableColumn fx:id="trainNameCol" prefWidth="142.0" text="Train Name" />
                        <TableColumn fx:id="trainIdCol" prefWidth="90.0" text="Train ID" />
                        <TableColumn fx:id="seatCol" prefWidth="79.0" text="Seat" />
                        <TableColumn fx:id="departureTimeCol" prefWidth="149.0" text="Departure Time" />
                        <TableColumn fx:id="departurePlaceCol" prefWidth="130.0" text="Departure Station" />
                        <TableColumn fx:id="arrivalPlaceCol" prefWidth="139.0" text="Arrival Station" />
                        <TableColumn fx:id="priceCol" prefWidth="87.0" text="Price" />

                    </columns>
                </TableView>
            </VBox>
            <Button fx:id="backButton" layoutX="441.0" layoutY="486.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="25.0" prefWidth="80.0" text="Back" />
        </VBox>
    </center>

