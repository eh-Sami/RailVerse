    </top>

    <center>
        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="436.0" prefWidth="857.0" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <GridPane hgap="20" maxWidth="-Infinity" prefHeight="177.0" prefWidth="888.0" vgap="15">

                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" />
                    <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" />
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints valignment="CENTER" />
                    <RowConstraints valignment="CENTER" />
                    <RowConstraints valignment="CENTER" />
                    <RowConstraints valignment="CENTER" />
                    <RowConstraints valignment="CENTER" />
               <RowConstraints />
                </rowConstraints>

                <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
